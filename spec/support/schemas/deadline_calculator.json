{
    "$schema": "http://json-schema.org/draft-04/schema#",
      
    "definitions": {
      
        "holiday": {
        "type": "object",
        "properties": {
            "date": { "type": "string", "format": "date" },
            "kind": { "type": "string" },
            "territory": { "type": "string" }
        },
        "required": [
            "date", 
            "kind",
            "territory"
            ],
        "additionalProperties": false
        },
        
        "missing_holiday": {
            "type": "object",
            "properties": {
                "year": { "type": "integer" },
                "territory": { "type": "string" }
            },
            "required": [
                "year",
                "territory"
            ],
        "additionalProperties": false
        }    
    },
      
    "type": "object",
    "required": [
        "municipality_code", 
        "notification",
        "days",
        "deadline",
        "holidays"
    ],
    "properties": {
        "municipality_code": { "type": "string" },
        "notification": { "type": "string", "format": "date" },
        "days": { "type": "integer" },
        "deadline": { "type": "string", "format": "date" },
        "holidays": {
          "type": "array",
          "items": { "$ref": "#/definitions/holiday" },
          "default": []
        },
        "missing_holidays": {
            "type": "array",
            "items": { "$ref": "#/definitions/missing_holiday" },
            "default": []
        }
    }, 
    "additionalProperties": false,
    
    "examples": [
        {
            "municipality_code": "00001",
            "notification": "2020-11-25",
            "days": 15,
            "deadline": "2021-01-15",
            "holidays": [
                {"date": "2020-12-25", "kind": "country", "territory": "España"},
                {"date": "2020-12-26", "kind": "autonomous_community", "territory": "Cataluña"}
              ]
        }
    ]

}